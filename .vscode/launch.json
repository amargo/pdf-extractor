    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug PDF Extractor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pdf_extractor.py",
            "args": [
                "szamlaW",
                "--export",
                "--output_dir", 
                "./exports",
                "--use-ocr",
                "--lang", "hun"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
